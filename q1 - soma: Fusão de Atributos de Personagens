#include <stdio.h>

int main() {
int a[5], b[5], p[5];
int x;  
    printf("Digite 5 valores para a base (a), sendo esses valores um em baixo do outro: \\n");
    for(x = 0; x < 5; x++){
        scanf("%d", &a[x]);
    }
    printf("Digite 5 valores do equipamento (b), sendo esses valores um em baixo do outro: \\n");
    for(x = 0; x < 5; x++){
        scanf("%d", &b[x]);
    }
    for(x = 0; x < 5; x++){
        p[x] = a[x] + b[x];
    }
    printf("\\nValor final do personagem (p) Ã©:\\n");
    for(x = 0; x < 5; x++){
        printf("%d", p[x]);
    }
return 0;
}
